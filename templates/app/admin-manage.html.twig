{% extends '@layout/default.html.twig' %}

{% block title %}Manage admins{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Manage admins</h1>
        </div>
    </div><!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <div id="messages"></div>
        </div>
    </div><!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div id="tableToolbar" class="btn-group">
                        <button type="button" class="btn btn-default" id="addAdminButton">
                            <i class="fa fa-plus"></i>
                        </button>
                        <button type="button" class="btn btn-default" id="editAdminButton">
                            <i class="fa fa-pencil"></i>
                        </button>
                        <button type="button" class="btn btn-default" id="deleteAdminButton">
                            <i class="fa fa-trash"></i>
                        </button>
                    </div>

                    <table data-toggle="table" data-url="{{ path('user', {'action':'list'}) }}"
                           data-id-field="id" data-show-refresh="true" data-show-toggle="true" data-show-columns="true"
                           data-search="true" data-pagination="true" data-toolbar="#tableToolbar"
                           data-side-pagination="server" data-page-list="[10, 30, 50, 100]" data-page-size="30"
                           data-sort-name="dateCreated" data-sort-order="desc" id="adminTable">
                        <thead>

                            <tr>
                                <th data-field="checked" data-checkbox="true" >Id</th>
                                <th data-field="id" data-sortable="true">#ID</th>
                                <th data-field="username"  data-sortable="true">Username</th>
                                <th data-field="email"  data-sortable="true">E-mail</th>
                                <th data-field="firstName" data-sortable="true">First Name</th>
                                <th data-field="lastName" data-sortable="true">Last Name</th>
                                <th data-field="role" data-sortable="true">Role</th>
                                <th data-field="status" data-sortable="true">Status</th>
                                <th data-field="dateCreated" data-sortable="true">Created</th>
                            </tr>

                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div><!--/.row-->

    <div class="modal fade" tabindex="-1" role="dialog" id="adminModal" aria-labelledby="adminModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="modalTitle"></h4>
                </div>
                <div class="modal-body">

                    <div id="formMessages"></div>
                    <div id="formPlaceholder"></div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="adminSubmit">Save</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascript %}
    <script>

        $("#editAdminButton").prop('disabled', true);
        $("#deleteAdminButton").prop('disabled', true);

        var showFailDialog = function(data) {
            if(data.status == 403) {
                showAlertDialog('Authorization error',
                        'You are not authorized to run this operation',
                        'error');
            }
            else {
                showAlertDialog('Unexpected server error',
                        'Could not load form due to a server error. Please try again',
                        'error');
            }
        };

        var uiButtons = function(selections) {
            var count = selections.length;
            if(count == 0) {
                $("#editAdminButton").prop('disabled', true);
                $("#deleteAdminButton").prop('disabled', true);
            }
            else if(count == 1) {
                $("#editAdminButton").prop('disabled', false);
                $("#deleteAdminButton").prop('disabled', false);
            }
            else {
                $("#editAdminButton").prop('disabled', true);
                $("#deleteAdminButton").prop('disabled', false);
            }
        };

        $("#addAdminButton").click(function() {
            showLoading();
            $.get('{{ path('user', {'action' : 'add'}) }}')
                    .done(function(data) {
                        hideLoading();
                        $("#modalTitle").html('Add admin');
                        $("#formPlaceholder").html(data);
                        $("#adminModal").modal('show');
                    })
                    .fail(function(data) {
                        hideLoading();
                        showFailDialog(data);
                    });
        });

        $("#editAdminButton").click(function() {
            var selections = $("#adminTable").bootstrapTable('getSelections');
            if(selections.length != 1) {
                showAlertDialog('Selection error',
                        'Multiple or no admins selected. Only one admin can be edited a time',
                        'error');
            }
            else {
                showLoading();
                $.get('{{ path('user', {'action': 'edit'}) }}/'+selections[0].id)
                        .done(function(data) {
                            hideLoading();
                            $("#modalTitle").html('Edit admin');
                            $("#formPlaceholder").html(data);
                            $("#adminModal").modal('show');
                        })
                        .fail(function(data) {
                            hideLoading();
                            showFailDialog(data);
                        });
            }

        });

        $("#deleteAdminButton").click(function() {
            var selections = $("#adminTable").bootstrapTable('getSelections');
            if(selections.length === 0) {
                return;
            }
            showLoading();
            $.post('{{ path('user', {'action': 'delete'}) }}', {'admins': selections})
                    .done(function(data) {
                        hideLoading();
                        $("#adminSubmit").text('Delete').removeClass('btn-primary').addClass('btn-danger');
                        $("#modalTitle").html('Delete admins');
                        $("#formPlaceholder").html(data);
                        $("#adminModal").modal('show');
                    })
                    .fail(function(data) {
                        hideLoading();
                        showFailDialog(data);
                    });

        });

        $("#adminSubmit").click(function() {
            showLoading();
            $.post($("#adminForm").attr('action'), $("#adminForm").serialize())
                    .done(function(data) {
                        if(typeof data.success !== 'undefined') {
                            hideLoading();
                            $("#adminModal").modal('hide');
                            $("#messages").html(data.alerts);
                            $("#adminTable").bootstrapTable('refresh');
                        }
                        if(typeof data.error !== 'undefined' || typeof data.info !== 'undefined') {
                            hideLoading();
                            $("#adminModal").modal('hide');
                            $("#messages").html(data.alerts);
                        }
                        if(typeof data.validation !== 'undefined') {
                            hideLoading();
                            $("#formMessages").html(data.alerts);
                            //mark form input with errors
                            $.each(data.validation.admin, function(name, value) {
                                $("#adminForm input[name='admin[" + name + "]']")
                                        .closest('.form-group').addClass('has-error');
                            });
                        }
                    })
                    .fail(function(data) {
                        hideLoading();
                        $("#adminModal").modal('hide');
                        showFailDialog(data);
                    });
        });

        $("#adminModal").on('shown.bs.modal', function () {
            $('#adminUsername').focus()
        });

        $("#adminModal").on('hidden.bs.modal', function () {
            $("#adminSubmit").text('Save').addClass('btn-primary').removeClass('btn-danger');
            $("#adminForm")[0].reset();
            $("#formMessages").html('');
            $("#adminForm :input")
                    .closest('.form-group').removeClass('has-error');
        });

        $("#adminTable").on('load-success.bs.table', function() {
            $("#editAdminButton").prop('disabled', true);
            $("#deleteAdminButton").prop('disabled', true);
        });

        $("#adminTable").on('load-error.bs.table', function() {
            $("#editAdminButton").prop('disabled', true);
            $("#deleteAdminButton").prop('disabled', true);
        });

        $("#adminTable").on('check.bs.table', function() {
            var selections = $("#adminTable").bootstrapTable('getSelections');
            uiButtons(selections);
        });

        $("#adminTable").on('uncheck.bs.table', function() {
            var selections = $("#adminTable").bootstrapTable('getSelections');
            uiButtons(selections);
        });

        $("#adminTable").on('check-all.bs.table', function() {
            var selections = $("#adminTable").bootstrapTable('getSelections');
            uiButtons(selections);
        });

        $("#adminTable").on('uncheck-all.bs.table', function() {
            var selections = $("#adminTable").bootstrapTable('getSelections');
            uiButtons(selections);
        });

    </script>
{% endblock %}