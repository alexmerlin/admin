{% set dummy = form.setAttribute('method', 'post') %}
{% set dummy = form.setAttribute('id', 'ajaxForm') %}
{% set dummy = form.setAttribute('action', path('user', {'action':'delete'}) ) %}
{% set dummy = form.prepare() %}

{{ form().openTag(form) | raw }}

    <div class="form-group">
        {% for admin in admins %}
            <input type="hidden" name="ids[]" value="{{ admin.id }}">
        {% endfor %}
    </div>

    <div class="checkbox">
        <label>
            <input type="hidden" name="confirm" value="no">
            <input type="checkbox" name="confirm" value="yes"> Are you sure you want to delete selected items?
        </label>
    </div>

    <div class="checkbox">
        <label>
            <input type="hidden" name="markAsDeleted" value="yes">
            <input type="checkbox" name="markAsDeleted" value="no"> Delete items completely(mark them deleted otherwise)?
        </label>
    </div>

    <div class="form-group">
        {{ formElement(form.get('delete_confirm_csrf')) }}
    </div>

{{ form().closeTag() | raw }}